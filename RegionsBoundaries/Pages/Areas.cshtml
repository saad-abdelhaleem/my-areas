@page
@model AreasModel
@{
    ViewData["Title"] = "Areas";
}
@section Scripts{
    <script src="~/js/areas.js" type="text/javascript"></script>
}
<div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary d-none d-sm-inline-block">@ViewBag.Title</h6>
        <div class="dropdown no-arrow">
            <div class="input-group">
                <div class="input-group-prepend">
                <button type="button" id="btnAddNewArea" class="btn btn-outline-primary">
                    <i class="fa fa-pluse"></i> 
                    Add New Area
                </button>
                </div>
                <input type="text" id="txtAreaName" class="form-control" placeholder="Enter the area name"/>
                <div class="input-group-append">
                    <button type="button" id="btnSaveNewArea" class="btn btn-outline-success">
                        <i class="fa fa-save"></i> 
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Card Body -->
    <div class="card-body">
        <div id="map" style="height:500px;"></div>
        <ul class="mt-3" id="loger" style="list-style: none;"></ul>
    </div>
</div>