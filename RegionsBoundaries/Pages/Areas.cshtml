@page
@model AreasModel
@{
    ViewData["Title"] = "Areas";
}
@section Scripts{
    <script src="~/js/areas.js" type="text/javascript"></script>
}
<div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary d-none d-sm-inline-block">@ViewBag.Title</h6>
        <div class="dropdown no-arrow">
            
        </div>
    </div>
    <!-- Card Body -->
    <div class="card-body">
        <div id="map" style="height:500px;"></div>
        <ul class="mt-3" id="loger" style="list-style: none;"></ul>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="modalNewArea" data-backdrop="static" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add New Area</h5>
      </div>
      <div class="modal-body">
        <div class="input-group">
                <input type="text" id="txtAreaName" class="form-control" placeholder="Enter the area name"/>
                <div class="input-group-append">
                    
                </div>
            </div>

      </div>
      <div class="modal-footer">
          <button type="button" id="btnSaveNewArea" class="btn btn-outline-success">
            <i class="fa fa-save"></i> 
            Save
        </button>
        <button type="button" class="btn btn-danger btn-sm" id="btnCancelNewArea">
            <i class="fa fa-trash"></i>
            Cancel Area
        </button>
      </div>
    </div>
  </div>
</div>